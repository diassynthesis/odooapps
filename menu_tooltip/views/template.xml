<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="menu_link" inherit_id="web.menu_link">
        <xpath expr="//a//span[hasclass('oe_menu_text')]" position="attributes">
            <attribute name="t-att-title">menu['description']</attribute>
        </xpath>
        <xpath expr="//a" position="attributes">
            <attribute name="t-att-title">menu['description']</attribute>
        </xpath>
    </template>

    <template id="menu_secondary"  inherit_id="web.menu_secondary">
        <xpath expr="//div[hasclass('oe_secondary_menu_section')]" position="attributes">
            <attribute name="t-att-title">menu['description']</attribute>
        </xpath>
    </template>

</odoo>
